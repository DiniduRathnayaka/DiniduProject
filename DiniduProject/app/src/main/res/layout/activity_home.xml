<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="131dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="@color/purple_700"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/loggedInView"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-5dp"
        android:text="Welcome ..... You are login in Home"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/change_profile_btn"
        android:layout_width="216dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/Logout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="-173dp"
        android:text="Change Profile"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Logout"
        android:layout_width="111dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-154dp"
        android:layout_marginEnd="300dp"
        android:background="#22EA13"
        android:text="Logout"
        android:textColor="#FFFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="118dp"
        android:layout_below="@+id/change_profile_btn"
        android:layout_alignStart="@+id/change_profile_btn"
        android:layout_alignEnd="@+id/change_profile_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="-64dp"
        android:layout_marginBottom="347dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="close"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</RelativeLayout>